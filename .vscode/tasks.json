{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "g++ build active file",
      "command": "g++",
      "args": [
        "-std=c++2a",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    },
    {
      "type": "cppbuild",
      "label": "clang++ build active file",
      "command": "clang++",
      "args": [
        "-std=c++2a",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build"
      }
    }
  ],
  "version": "2.0.0"
}