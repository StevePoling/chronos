{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "g++ build active file",
      "command": "g++",
      "args": [
        "-std=c++20",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "cppbuild",
      "label": "clang++ build active file",
      "command": "clang++",
      "args": [
        "-std=c++20",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": ["$gcc"],
      "group": { "kind": "build" }
    },
    {
      "type": "cppbuild",
      "label": "C/C++: cl.exe build active file",
      "command": "cl.exe",
      "args": [
        "/Zi",
        "/EHsc",
        "/nologo",
        "/std:c++20",
        "/Fe${fileDirname}\\${fileBasenameNoExtension}.EXE",
        "${file}",
      ],
      "options": { 
        "cwd": "${fileDirname}" 
      },
      "problemMatcher": [
        "$msCompile"
      ],
      "group": { 
        "kind": "build", 
        "isDefault": true
      },
      "detail": "Task generated by debugger."
    }
  ],
  "version": "2.0.0"
}